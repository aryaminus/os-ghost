{
	"manifest_version": 3,
	"name": "OS Ghost Bridge",
	"version": "1.0.0",
	"description": "Bridge between Chrome browser and The OS Ghost game",
	"permissions": ["activeTab", "tabs", "nativeMessaging", "scripting"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	]
}
