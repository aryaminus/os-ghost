{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "The OS Ghost",
	"version": "0.1.0",
	"identifier": "com.osghost.game",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "The OS Ghost",
				"label": "main",
				"width": 320,
				"height": 480,
				"minWidth": 280,
				"minHeight": 300,
				"maxWidth": 500,
				"maxHeight": 700,
				"transparent": true,
				"decorations": false,
				"alwaysOnTop": true,
				"skipTaskbar": false,
				"resizable": true,
				"visible": true,
				"x": null,
				"y": null
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https: data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:"
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"category": "Game",
		"macOS": {
			"entitlements": "entitlements.plist"
		}
	}
}
