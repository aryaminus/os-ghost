{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "The OS Ghost",
	"version": "0.1.44",
	"identifier": "com.osghost.game",
	"plugins": {
		"updater": {
			"endpoints": [
				"https://github.com/aryaminus/os-ghost/releases/latest/download/latest.json"
			],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ2NjI1QkY2MTFFNUY3NjgKUldSbzkrVVI5bHRpMXZHczRUSEJlZFJ5eXNPLzVxdnFlTHlmbDNiQnFDQ2NKTkxMZElvM1dCbGoK"
		}
	},
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "The OS Ghost",
				"label": "main",
				"width": 330,
				"height": 420,
				"minWidth": 320,
				"minHeight": 400,
				"maxWidth": 460,
				"maxHeight": 640,
				"transparent": true,
				"decorations": false,
				"alwaysOnTop": true,
				"skipTaskbar": false,
				"resizable": true,
				"visible": true,
				"x": null,
				"y": null
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https: data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com"
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"resources": [
			"resources/gmail_client_secret.json"
		],
		"externalBin": [
			"native_bridge"
		],
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico",
			"icons/icon.png"
		],
		"category": "Game",
		"macOS": {
			"entitlements": "entitlements.plist"
		},
		"windows": {
			"webviewInstallMode": {
				"type": "downloadBootstrapper"
			},
			"nsis": {
				"installMode": "currentUser"
			}
		},
		"linux": {
			"deb": {
				"section": "games",
				"priority": "optional"
			},
			"appimage": {
				"bundleMediaFramework": false
			}
		}
	}
}
